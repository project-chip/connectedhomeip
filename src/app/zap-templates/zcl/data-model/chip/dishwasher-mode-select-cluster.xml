<configurator>
  <domain name="CHIP"/>

  <enum name="DishwashwerModeSelectResponseStatusEnum" type="ENUM8">
    <cluster code="0x0059"/>
    <item name="Success" value="0x00"/>
    <item name="UnsupportedMode" value="0x01"/>
    <item name="GenericFailure" value="0x02"/>
  </enum>

  <enum name="DishwashwerModeSelectSemanticTagValueEnum" type="ENUM16">
    <cluster code="0x0059"/>
    <item name="Auto"      value="0x0001"/>
    <item name="Quiet"     value="0x0002"/>
    <item name="LowNoise"  value="0x0003"/>
    <item name="LowEnergy" value="0x0004"/>
    <item name="Vacation"  value="0x0005"/>
    <item name="Min"       value="0x0006"/>
    <item name="Max"       value="0x0007"/>
    <item name="Night"     value="0x0008"/>
    <item name="Day"       value="0x0009"/>
    <item name="Normal"    value="0x4000"/>
    <item name="Heavy"     value="0x4001"/>
    <item name="Light"     value="0x4002"/>
  </enum>

  <struct name="SemanticTagStruct">
    <cluster code="0x0059"/>
    <item name="MfgCode" type="vendor_id"/>
    <item name="Value" type="ENUM16" optional="false"/>
  </struct>

  <struct name="ModeOptionStruct">
    <cluster code="0x0059"/>
    <item name="Label" type="CHAR_STRING" optional="false" length="64"/>
    <item name="Mode" type="INT8U" optional="false"/>
    <item name="SemanticTags" type="SemanticTagStruct" array="true" optional="false"/>
  </struct>

  <cluster>
    <domain>Appliances</domain>
    <name>Dishwasher Mode Select</name>
    <code>0x0059</code>
    <define>DISHWASHER_MODE_SELECT_CLUSTER</define>
    <client init="false" tick="false">true</client>
    <server init="false" tick="false">true</server>
    <description>Attributes and commands for selecting a mode from a list of supported options for a dishwasher.</description>
    <!-- Base data types -->
    <attribute side="server" code="0x0000" define="MODE_DESCRIPTION" type="CHAR_STRING"                                     writable="false" optional="false" isNullable="false" length="32">Description</attribute>
    <attribute side="server" code="0x0001" define="STANDARD_NAMESPACE" type="ENUM16"                                        writable="false" optional="false"  isNullable="true">StandardNamespace</attribute>
    <attribute side="server" code="0x0002" define="SUPPORTED_MODES" type="ARRAY" entryType="ModeOptionStruct"               writable="false" optional="false" isNullable="false">SupportedModes</attribute>
    <attribute side="server" code="0x0003" define="CURRENT_MODE"    type="INT8U"                                            writable="false" optional="false" isNullable="false" reportable="true">CurrentMode</attribute>
    <attribute side="server" code="0x0004" define="START_UP_MODE"   type="INT8U"                                            writable="true" optional="true"  isNullable="true">StartUpMode</attribute>
    <attribute side="server" code="0x0005" define="ON_MODE"         type="INT8U"                                            writable="true"  optional="true" isNullable="true">OnMode</attribute>

    <!-- Test Commands -->
    <command source="client" code="0x00" name="ChangeToMode" optional="false">
      <description>
        On receipt of this command, if the NewMode field matches the Mode field in an entry of the SupportedModes list, the server SHALL set the CurrentMode attribute to the NewMode value, 
        otherwise, the server SHALL respond with an INVALID_COMMAND status response.
      </description>
      <arg name="NewMode" type="INT8U" />
    </command>
    <command source="client" code="0x01" name="ChangeToModeWithStatus" optional="true">
      <description>
        On receipt of this command the server SHALL respond with a ChangeToModeResponse command.
      </description>
      <arg name="NewMode" type="INT8U" />
    </command>
    <command source="client" code="0x02" name="ChangeToModeResponse" optional="true">
      <description>
        This command is sent by the server on receipt of the ChangeToModeWithStatus command.
      </description>
      <arg name="Status" type="ENUM8" />
      <arg name="StatusText" type="CHAR_STRING" />
    </command>

  </cluster>

  <bitmap name="DishwasherModeSelectFeature" type="BITMAP32">
    <cluster code="0x0059"/>
    <field name="DEPONOFF" mask="0x1"/>
    <field name="EXT" mask="0x1"/>
  </bitmap>
</configurator>
