<configurator>
  <domain name="General"/>

  <cluster>
    <domain>General</domain>
    <name>Chef Test Cluster</name>
    <code>0xFFF1FC20</code>
    <define>CHEF_TEST_CLUSTER</define>
    <description>The Chef Test Cluster showcases manufacturer extensions</description>

    <!-- Attributes -->
    <attribute side="server" code="0x0000" define="ATTRIBUTE1" type="BOOLEAN" writable="true" default="false" optional="false">attribute1</attribute>

    <!-- Commands -->
    <!-- Test Command -->
    <command source="client" code="0x00" name="Test" optional="false">
      <description>
        Simple command without any parameters and without a specific response
      </description>
    </command>

    <!-- TestAddArguments Command -->
    <command source="server" code="0x01" name="TestAddArgumentsResponse" optional="true" disableDefaultResponse="true">
      <description>
        Response for TestAddArguments that returns the sum.
      </description>
      <arg name="returnValue" type="INT8U"/>
    </command>

    <command source="client" code="0x02" name="TestAddArguments" response="TestAddArgumentsResponse" optional="true">
      <description>
        Command that takes two arguments and returns their sum.
      </description>
      <arg name="arg1" type="INT8U"/>
      <arg name="arg2" type="INT8U"/>
    </command>

    <!-- Events -->
  </cluster>
</configurator>
