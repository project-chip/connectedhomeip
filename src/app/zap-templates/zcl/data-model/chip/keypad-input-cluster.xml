  <bitmap name="KeypadInputFeature" type="BITMAP32">
    <cluster code="0x0509"/>
    <field name="NavigationKeyCodes" mask="0x1"/>
    <field name="LocationKeys" mask="0x2"/>
    <field name="NumberKeys" mask="0x4"/>
  </bitmap>

</configurator>
