<configurator>
  <domain name="CHIP"/>

  <enum name="WasherControlsEnum" type="ENUM8">
    <cluster code="0x0061"/>
    <item name="Spin" value="0x00"/>
    <item name="Rinse" value="0x01"/>
    <item name="Error"   value="0x03"/>
  </enum>

  <enum name="ErrorStateEnum" type="ENUM8">
    <cluster code="0x0061"/>
    <item name="NoError"                    value="0x00"/>
    <item name="CommandInvalidInState"      value="0x01"/>
  </enum>

  <struct name="SpinSpeedIndex">
    <cluster code="0x0061"/>
    <item name="WasherControlsID"    type="WasherControlsEnum" optional="false"/>
    <item name="WasherControlsLabel" type="CHAR_STRING" optional="false"/>
  </struct>

  <struct name="ErrorStateStruct">
    <cluster code="0x0061"/>
    <item name="ErrorStateID" type="ErrorStateEnum" optional="false" />
    <item name="ErrorStateLabel" type="CHAR_STRING" optional="false" length="64"/>
    <item name="ErrorStateDetails" type="CHAR_STRING" optional="false" length="64"/>
  </struct>

  <cluster>
    <domain>General</domain>
    <name>Washer Controls</name>
    <code>0x0061</code>
    <define>WASHER_CONTROLS_CLUSTER</define>
    <client init="false" tick="false">true</client>
    <server init="false" tick="false">true</server>
    <description>This cluster supports remotely monitoring and controling the different typs of functionality available to a washing device, such as a washing machine.</description>

    <globalAttribute side="server" code="0xFFFC" value="1" />

    <attribute side="server" code="0x0000" define="SPIN_SPEEDS"               type="ARRAY" entryType="SpinSpeedIndex"                               writable="false" isNullable="false" optional="false">SpinSpeeds</attribute>
    <attribute side="server" code="0x0001" define="SPIN_SPEED_CURRENT"        type="INT8U"                                min="0x00" max="0x1F"    writable="true" isNullable="true"  optional="true">SpinSpeedCurrent</attribute>
    <attribute side="server" code="0x0002" define="NUMBER_OF_RINSES"          type="INT8U"                                min="0x00" max="0x003" writable="true" isNullable="true"  optional="true">NumberOfRinses</attribute>
    <attribute side="server" code="0x0003" define="MAXRINSES"                 type="INT8U"                                                         writable="true"                    optional="false">MaxRinses</attribute>

    <command source="client" code="0x00" name="SetSpinSpeed" response="WasherControlCommandResponse" optional="false">
      <description>Upon receipt, the device SHALL set SpinSpeedCurrent to the current value received from the server.</description>
    </command>

    <command source="client" code="0x01" name="SetNumberOfRinses" response="WasherControlCommandResponse" optional="false">
      <description>Upon receipt, the device SHALL set NumberOfRinses to the current value received from the server.</description>
    </command>

    <command source="server" code="0x04" name="WasherControlCommandResponse" optional="false">
      <description>This command SHALL be generated in response to any of the washer control commands.</description>
      <arg name="CommandResponseState" type="ErrorStateStruct"/>
    </command>

    <event side="server" code="0x00" priority="critical" name="OperationalError" optional="false">
      <description>OperationalError</description>
      <field id="0" name="ErrorState" type="ErrorStateStruct" />
    </event>

     <event side="server" code="0x01" priority="info" name="OperationCompletion" optional="true">
      <description>OperationCompletion</description>
      <field id="0" name="CompletionErrorCode"  type="ErrorStateEnum" />
      <field id="1" name="TotalOperationalTime" type="INT32S" />
      <field id="2" name="PausedTime"           type="INT32S" />
    </event>

  </cluster>
</configurator>

