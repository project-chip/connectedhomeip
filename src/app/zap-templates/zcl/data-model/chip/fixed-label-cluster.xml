<configurator>
  <domain name="CHIP"/>

  <struct name="LabelStruct">
    <item name="label" type="OCTET_STRING" length="16"/> <!-- TODO: Change this to CHAR_STRING once it is supported #6112 -->
    <item name="value" type="OCTET_STRING" length="16"/> <!-- TODO: Change this to CHAR_STRING once it is supported #6112 -->
  </struct>

  <cluster>
    <domain>General</domain>
    <name>Fixed Label</name>
    <code>0x0040</code>
    <define>FIXED_LABEL_CLUSTER</define>
    <description>The Fixed Label Cluster provides a feature for the device to tag an endpoint with zero or more read only
labels.</description>
    <attribute side="server" code="0x0000" define="LABEL_LIST" type="ARRAY" entryType="LabelStruct" length="254" writable="false" optional="false">label list</attribute>
  </cluster>
</configurator>
