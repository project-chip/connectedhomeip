<configurator>
  <domain name="CHIP"/>

  <cluster>
    <name>Power Source Configuration</name>
    <domain>CHIP</domain>
    <description>This cluster is used to describe the configuration and capabilities of a Device's power system.</description>
    <code>0x002E</code>
    <define>POWER_SOURCE_CONFIGURATION_CLUSTER</define>
    <client init="false" tick="false">true</client>
    <server init="false" tick="false">true</server>
    <globalAttribute side="either" code="0xFFFD" value="1"/>
    <attribute side="server" code="0x0000" define="SOURCES" type="ARRAY" entryType="INT8U" length="6" writable="false" optional="false">Sources</attribute>
  </cluster>
</configurator>
