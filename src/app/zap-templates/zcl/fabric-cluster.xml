<configurator>
  <domain name="CHIP"/>
  <cluster>
    <domain>General</domain>
    <name>Fabric</name>
    <code>0xfc03</code> // Change to correct clusterID once it is decided in the spec #2396
    <define>FABRIC_CLUSTER</define>
    <description>The Fabric Cluster defines a cluster that allows you to fetch and manipulate the list of paired fabrics.</description>

    <attribute side="server" code="0x0000" define="FABRICS_LIST" type="ARRAY" entryType="FabricDescriptor" length="254" writable="false" optional="false">fabrics list</attribute>

    <command source="client" code="0x00" name="UpdateFabricLabel" optional="false">
      <description>Update Label on fabric</description>
      <arg name="fabricLabel" type="OCTET_STRING" length="32"/> //TODO: change this to CHAR_STRING once it is supported #6112
    </command>

    <command source="client" code="0x01" name="RemoveFabric" optional="false">
      <description>Remove paired fabric</description>
      <arg name="fabricId" type="FABRIC_ID"/>
      <arg name="nodeId" type="NODE_ID"/>
      <arg name="vendorId" type="INT16U"/>
    </command>

    <command source="client" code="0x02" name="GetFabricId" optional="false">
      <description>Sets the fabric ID of that admin's fabric. Should be called post pairing and can only be called once</description>
    </command>

    <command source="server" code="0x03" name="GetFabricIdResponse" optional="false">
      <description>Sender expects GetFabricIdResponse command if the GetFabricId command was correctly received</description>
      <arg name="fabricId" type="FABRIC_ID"/>
    </command>

  </cluster>
</configurator>
