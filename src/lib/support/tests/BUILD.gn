import("//build_overrides/build.gni")
import("//build_overrides/chip.gni")
import("//build_overrides/nlunit_test.gni")

import("${chip_root}/build/chip/chip_test_suite.gni")

chip_test_suite("tests") {
  output_name = "libSupportTests"

  test_sources = [
    "TestBitMask.cpp",
    "TestBufferReader.cpp",
    "TestBufferWriter.cpp",
    "TestBytesCircularBuffer.cpp",
    "TestBytesToHex.cpp",
    "TestCHIPCounter.cpp",
    "TestCHIPMem.cpp",
    "TestCHIPMemString.cpp",
    "TestDefer.cpp",
    "TestErrorStr.cpp",
    "TestFixedBufferAllocator.cpp",
    "TestFold.cpp",
    "TestIniEscaping.cpp",
    "TestIntrusiveList.cpp",
    "TestOwnerOf.cpp",
    "TestPersistedCounter.cpp",
    "TestPool.cpp",
    "TestPrivateHeap.cpp",
    "TestSafeInt.cpp",
    "TestSafeString.cpp",
    "TestScopedBuffer.cpp",
    "TestSerializableIntegerSet.cpp",
    "TestSpan.cpp",
    "TestStateMachine.cpp",
    "TestStringBuilder.cpp",
    "TestTestPersistentStorageDelegate.cpp",
    "TestThreadOperationalDataset.cpp",
    "TestTimeUtils.cpp",
    "TestTlvToJson.cpp",
    "TestVariant.cpp",
    "TestZclString.cpp",
  ]
  sources = []

  if (current_os != "mbed") {
    test_sources += [ "TestCHIPArgParser.cpp" ]
  }

  cflags = [
    "-Wconversion",

    # TODO(#21255): work-around for SimpleStateMachine constructor issue.
    "-Wno-uninitialized",
  ]

  public_deps = [
    "${chip_root}/src/credentials",
    "${chip_root}/src/lib/core",
    "${chip_root}/src/lib/support:testing",
    "${chip_root}/src/lib/support/jsontlv",
    "${chip_root}/src/platform",
    "${nlunit_test_root}:nlunit-test",
  ]
}
