<!DOCTYPE html>
<html>

<head>
    <title>Push AV Server</title>
    <link href="{{ url_for('static', path='/styles.css') }}" rel="stylesheet">
</head>

<body>
    <nav class="top-level">
        <a href="/ui/streams">Sessions</a>
        <a href="/ui/certificates">Certificates</a>
    </nav>
    <div class="left-bar">
        <h2>Sessions</h2>


        <ul>
            {% for session in sessions %}
            <li> Session {{session['id']}}
                <ul>
                    {% for (file, crt) in session['uploaded_segments'] %}
                    <li><a href="/ui/streams/{{session['id']}}/{{file}}">{{file}}</a> (<a href="/ui/streams/{{session['id']}}/{{crt}}">{{crt}}</a>)</li>
                    {% endfor %}
                    {% for (file, crt) in session['uploaded_manifests'] %}
                    <li><a href="/ui/streams/{{session['id']}}/{{file}}">{{file}}</a> (<a href="/ui/streams/{{session['id']}}/{{crt}}">{{crt}}</a>) </li>
                    {% endfor %}
                </ul>
            </li>
            {% endfor %}
        </ul>
        <div class="center">
        </div>
</body>

</html>