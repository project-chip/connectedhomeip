pw_rpc_CONFIG = "$dir_pw_rpc:disable_global_mutex"

pw_assert_BACKEND = "$dir_pw_assert_log"
pw_log_BACKEND = "$dir_pw_log_basic"

pw_unit_test_BACKEND = "$dir_pw_unit_test:light"
