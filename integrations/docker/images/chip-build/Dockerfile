# start with Ubuntu 18.04LTS
FROM ubuntu:bionic

RUN set -x \
 && apt-get update \
 && apt install \
 && apt-get install -fy \
      git \
      curl \
      make \
      autoconf \
      automake \
      libtool \
      curl \
      jq \
      clang-9 \
      clang-format-9 \
      clang-tidy-9 \
      lcov \
      shellcheck
