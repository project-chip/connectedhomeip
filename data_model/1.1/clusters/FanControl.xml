<cluster xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="types types.xsd cluster cluster.xsd" id="0x0202" name="Fan Control Cluster" revision="2">
  <revisionHistory>
    <revision revision="1" summary="global mandatory ClusterRevision attribute added"/>
    <revision revision="2" summary="New data model format and notation; Percent, speed and motion settings; General cleanup"/>
  </revisionHistory>
  <clusterIds>
    <clusterId id="0x0202" name="Fan Control"/>
  </clusterIds>
  <classification hierarchy="base" role="application" picsCode="FAN" scope="Endpoint"/>
  <features>
    <feature bit="0" code="SPD" name="Multi-Speed" summary="1-100 speeds">
      <optionalConform/>
    </feature>
    <feature bit="1" code="AUT" name="Auto" summary="Automatic mode supported for fan speed">
      <optionalConform/>
    </feature>
    <feature bit="2" code="RCK" name="Rocking" summary="Rocking movement supported">
      <optionalConform/>
    </feature>
    <feature bit="3" code="WND" name="Wind" summary="Wind emulation supported">
      <optionalConform/>
    </feature>
  </features>
  <attributes>
    <attribute id="0x0000" name="FanMode" type="enum8" default="0">
      <enum>
        <item value="0" name="Off" summary="Off">
          <mandatoryConform/>
        </item>
        <item value="1" name="Low" summary="Low">
          <mandatoryConform/>
        </item>
        <item value="2" name="Medium" summary="Medium">
          <mandatoryConform/>
        </item>
        <item value="3" name="High" summary="High">
          <mandatoryConform/>
        </item>
        <item value="4" name="On" summary="On">
          <mandatoryConform/>
        </item>
        <item value="5" name="Auto" summary="Auto">
          <mandatoryConform/>
        </item>
        <item value="6" name="Smart" summary="Smart">
          <mandatoryConform/>
        </item>
      </enum>
      <access read="true" write="true" readPrivilege="view" writePrivilege="operate"/>
      <quality persistence="nonVolatile"/>
      <mandatoryConform/>
      <constraint>
        <between>
          <from value="0"/>
          <to value="6"/>
        </between>
      </constraint>
    </attribute>
    <attribute id="0x0001" name="FanModeSequence" type="enum8" default="MS">
      <enum>
        <item value="0" name="Off/Low/Med/High" summary="Off/Low/Med/High">
          <mandatoryConform/>
        </item>
        <item value="1" name="Off/Low/High" summary="Off/Low/High">
          <mandatoryConform/>
        </item>
        <item value="2" name="Off/Low/Med/High/Auto" summary="Off/Low/Med/High/Auto">
          <mandatoryConform/>
        </item>
        <item value="3" name="Off/Low/High/Auto" summary="Off/Low/High/Auto">
          <mandatoryConform/>
        </item>
        <item value="4" name="Off/On/Auto" summary="Off/On/Auto">
          <mandatoryConform/>
        </item>
        <item value="5" name="Off/On" summary="Off/On">
          <mandatoryConform/>
        </item>
      </enum>
      <access read="true" write="optional" readPrivilege="view" writePrivilege="operate"/>
      <quality persistence="nonVolatile"/>
      <mandatoryConform/>
      <constraint>
        <between>
          <from value="0"/>
          <to value="5"/>
        </between>
      </constraint>
    </attribute>
    <attribute id="0x0002" name="PercentSetting" type="uint8" default="0">
      <access read="true" write="true" readPrivilege="view" writePrivilege="operate"/>
      <quality nullable="true"/>
      <mandatoryConform/>
      <constraint>
        <between>
          <from value="0"/>
          <to value="100"/>
        </between>
      </constraint>
    </attribute>
    <attribute id="0x0003" name="PercentCurrent" type="uint8" default="desc">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform/>
      <constraint>
        <between>
          <from value="0"/>
          <to value="100"/>
        </between>
      </constraint>
    </attribute>
    <attribute id="0x0004" name="SpeedMax" type="uint8" default="MS">
      <access read="true" readPrivilege="view"/>
      <quality persistence="fixed"/>
      <mandatoryConform>
        <feature name="SPD"/>
      </mandatoryConform>
      <constraint>
        <between>
          <from value="1"/>
          <to value="100"/>
        </between>
      </constraint>
    </attribute>
    <attribute id="0x0005" name="SpeedSetting" type="uint8" default="0">
      <access read="true" write="true" readPrivilege="view" writePrivilege="operate"/>
      <quality nullable="true"/>
      <mandatoryConform>
        <feature name="SPD"/>
      </mandatoryConform>
      <constraint>
        <between>
          <from value="0"/>
          <to>
            <attribute name="SpeedMax"/>
          </to>
        </between>
      </constraint>
    </attribute>
    <attribute id="0x0006" name="SpeedCurrent" type="uint8" default="desc">
      <access read="true" readPrivilege="view"/>
      <quality reportable="true"/>
      <mandatoryConform>
        <feature name="SPD"/>
      </mandatoryConform>
      <constraint>
        <between>
          <from value="0"/>
          <to>
            <attribute name="SpeedMax"/>
          </to>
        </between>
      </constraint>
    </attribute>
    <attribute id="0x0007" name="RockSupport" type="map8" default="0">
      <bitmap>
        <bitfield name="RockLeftRight" bit="0" summary="RockLeftRight">
          <mandatoryConform/>
        </bitfield>
        <bitfield name="RockUpDown" bit="1" summary="RockUpDown">
          <mandatoryConform/>
        </bitfield>
        <bitfield name="RockRound" bit="2" summary="RockRound">
          <mandatoryConform/>
        </bitfield>
      </bitmap>
      <access read="true" readPrivilege="view"/>
      <quality persistence="fixed"/>
      <mandatoryConform>
        <feature name="RCK"/>
      </mandatoryConform>
      <constraint>
        <desc/>
      </constraint>
    </attribute>
    <attribute id="0x0008" name="RockSetting" type="map8" default="0">
      <bitmap>
        <bitfield name="RockLeftRight" bit="0" summary="RockLeftRight">
          <mandatoryConform/>
        </bitfield>
        <bitfield name="RockUpDown" bit="1" summary="RockUpDown">
          <mandatoryConform/>
        </bitfield>
        <bitfield name="RockRound" bit="2" summary="RockRound">
          <mandatoryConform/>
        </bitfield>
      </bitmap>
      <access read="true" write="true" readPrivilege="view" writePrivilege="operate"/>
      <quality reportable="true"/>
      <mandatoryConform>
        <feature name="RCK"/>
      </mandatoryConform>
      <constraint>
        <desc/>
      </constraint>
    </attribute>
    <attribute id="0x0009" name="WindSupport" type="map8" default="0">
      <bitmap>
        <bitfield name="SleepWind" bit="0" summary="Sleep Wind">
          <mandatoryConform/>
        </bitfield>
        <bitfield name="NaturalWind" bit="1" summary="Natural Wind">
          <mandatoryConform/>
        </bitfield>
      </bitmap>
      <access read="true" readPrivilege="view"/>
      <quality persistence="fixed"/>
      <mandatoryConform>
        <feature name="WND"/>
      </mandatoryConform>
      <constraint>
        <desc/>
      </constraint>
    </attribute>
    <attribute id="0x000A" name="WindSetting" type="map8" default="0">
      <bitmap>
        <bitfield name="SleepWind" bit="0" summary="Sleep Wind">
          <mandatoryConform/>
        </bitfield>
        <bitfield name="NaturalWind" bit="1" summary="Natural Wind">
          <mandatoryConform/>
        </bitfield>
      </bitmap>
      <access read="true" write="true" readPrivilege="view" writePrivilege="operate"/>
      <quality reportable="true"/>
      <mandatoryConform>
        <feature name="WND"/>
      </mandatoryConform>
      <constraint>
        <desc/>
      </constraint>
    </attribute>
  </attributes>
</cluster>
