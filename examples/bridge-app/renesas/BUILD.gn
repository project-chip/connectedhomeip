import("//build_overrides/build.gni")
import("//build_overrides/chip.gni")
import("//build_overrides/lwip.gni")

import("${chip_root}/src/platform/device.gni")
import("${chip_root}/src/lib/lib.gni")

declare_args() {
  setupPinCode = 20202021
  setupDiscriminator = 3840
}

static_library("chip-bridge-app")
{
  output_name = "libRenesasChip"
  output_dir = "${root_out_dir}/lib"
  complete_static_lib = true
  public_deps = [
    "${chip_root}/src/app",
    "${chip_root}/src/ble",
    "${chip_root}/src/crypto",
    "${chip_root}/src/inet",
    "${chip_root}/src/lib/asn1",
    "${chip_root}/src/lib/core",
    "${chip_root}/src/lib/dnssd",
    "${chip_root}/src/lib/support",
    "${chip_root}/src/messaging",
    "${chip_root}/src/platform",
    "${chip_root}/src/setup_payload",
    "${chip_root}/src/system",
    "${chip_root}/src/transport",
    "${chip_root}/third_party/jsoncpp",
    "${chip_root}/src/app:app",
    "${chip_root}/examples/bridge-app/bridge-common",
    "${chip_root}/src/credentials:credentials"
  ]
  libs = ["lib", "access", "credentials", "bridge-common"]
}

group("renesas") {
  deps = [ ":chip-bridge-app" ]
}

group("default") {
  deps = [
        "//:chip-bridge-app",
        "//:renesas",
        "${chip_root}/src/access:access",
