  include_dirs = [
    "${nrf5_sdk_root}/components/boards/",
    "${nrf5_sdk_root}/components/libraries/",
  ]
  deps = [
    "$dir_pw_sys_io:default_putget_bytes",
    "$dir_pw_sys_io:facade",
    "${nrf5_platform_dir}/sdk:sdk",
  ]
  sources = [ "sys_io_baremetal_nrf528xx.cc" ]
}
