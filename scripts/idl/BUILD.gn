    "idl/tests/outputs/simple_attribute/jni/MyClusterClient-ReadImpl.cpp",
    "idl/tests/outputs/simple_attribute/jni/MyClusterClient-InvokeSubscribeImpl.cpp",
  ]

  sources = matter_idl_generator_sources

  tests = [
    "idl/test_matter_idl_parser.py",
    "idl/test_generators.py",
    "idl/test_xml_parser.py",
  ]

  # TODO: at a future time consider enabling all (* or missing) here to get
  #       pylint checking these files
  static_analysis = []
}
