    "idl/tests/outputs/cluster_struct_attribute/bridge/BridgeGlobalStructs.h",
    "idl/tests/outputs/cluster_struct_attribute/bridge/DemoClusterServer.h",
    "idl/tests/outputs/cluster_struct_attribute/jni/DemoClusterClient-ReadImpl.cpp",
    "idl/tests/outputs/cluster_struct_attribute/jni/DemoClusterClient-InvokeSubscribeImpl.cpp",
    "idl/tests/outputs/global_struct_attribute/bridge/BridgeClustersImpl.h",
    "idl/tests/outputs/global_struct_attribute/bridge/BridgeGlobalStructs.h",
