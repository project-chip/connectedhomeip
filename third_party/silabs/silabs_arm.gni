import("silabs_board.gni")

if (silabs_family == "efr32mg12" || wifi_soc == true) {
  arm_arch = "armv7e-m"
  arm_abi = "aapcs"
  arm_cpu = "cortex-m4"
  arm_float_abi = "softfp"
  arm_fpu = "fpv4-sp-d16"
} else if (silabs_family == "efr32mg21" || silabs_family == "efr32mg24" ||
           silabs_family == "mgm24") {
  arm_arch = "armv8-m.main+dsp"
  arm_abi = "aapcs"
  arm_cpu = "cortex-m33"
  arm_float_abi = "hard"
  arm_fpu = "fpv5-sp-d16"
}
