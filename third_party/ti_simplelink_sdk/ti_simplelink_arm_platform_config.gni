import("ti_simplelink_board.gni")

if (ti_simplelink_device_family == "cc13x2_26x2" ||
    ti_simplelink_device_family == "cc13x2x7_26x2x7") {
  arm_arch = "armv7e-m"
  arm_abi = "aapcs"
  arm_cpu = "cortex-m4"
  arm_float_abi = "hard"
  arm_fpu = "fpv5-sp-d16"
  arm_use_thumb = true
} else if (ti_simplelink_device_family == "cc13x4_26x4") {
  arm_arch = ""
  arm_abi = ""
  arm_cpu = "cortex-m33"
  arm_float_abi = "hard"
  arm_fpu = "fpv5-sp-d16"
  arm_use_thumb = true
} else if (ti_simplelink_device_family == "cc32xx") {
  arm_arch = "armv7e-m"
  arm_abi = ""
  arm_cpu = "cortex-m4"
  arm_float_abi = "soft"
  arm_fpu = ""
  arm_use_thumb = true
} else {
  assert(false, "ti_simplelink_device_family must be specified")
}
