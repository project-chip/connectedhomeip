    "OPENTHREAD_PLATFORM_USE_PSEUDO_RESET=1",
  ]

  public = [
    "${openthread_root}/examples/platforms/openthread-select.h",
    "${openthread_root}/examples/platforms/openthread-system.h",
  ]

  sources = [
    "${openthread_root}/examples/platforms/simulation/alarm.c",
    "${openthread_root}/examples/platforms/simulation/ble.c",
    "${openthread_root}/examples/platforms/simulation/crypto.c",
    "${openthread_root}/examples/platforms/simulation/diag.c",
    "${openthread_root}/examples/platforms/simulation/dns.c",
    "${openthread_root}/examples/platforms/simulation/dnssd.c",
    "${openthread_root}/examples/platforms/simulation/dso_transport.c",
    "${openthread_root}/examples/platforms/simulation/entropy.c",
    "${openthread_root}/examples/platforms/simulation/flash.c",
    "${openthread_root}/examples/platforms/simulation/infra_if.c",
    "${openthread_root}/examples/platforms/simulation/logging.c",
    "${openthread_root}/examples/platforms/simulation/mdns_socket.c",
    "${openthread_root}/examples/platforms/simulation/misc.c",
    "${openthread_root}/examples/platforms/simulation/multipan.c",
    "${openthread_root}/examples/platforms/simulation/radio.c",
    "${openthread_root}/examples/platforms/simulation/simul_utils.c",
    "${openthread_root}/examples/platforms/simulation/spi-stubs.c",
    "${openthread_root}/examples/platforms/simulation/system.c",
    "${openthread_root}/examples/platforms/simulation/trel.c",
    "${openthread_root}/src/lib/platform/exit_code.c",
    "${openthread_root}/src/lib/platform/exit_code.h",
  ]

  deps = [
    "${openthread_root}/src/core:libopenthread_core_headers",
    "..:libopenthread-platform-utils",
  ]

  public_configs = [ "..:libopenthread-platform_config" ]
}
