declare_args() {
  # Location of the efr32 SDK.
  efr32_sdk_root = ""
}

if (efr32_sdk_root == "") {
  efr32_sdk_root = getenv("EFR32_SDK_ROOT")
}

assert(efr32_sdk_root != "", "efr32_sdk_root must be specified")

