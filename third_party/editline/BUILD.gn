import("//build_overrides/build.gni")
import("${build_root}/config/compiler/compiler.gni")

config("editline_config") {
  include_dirs = [ "repo/include" ]
}

config("editline_config_disable_warnings") {
  cflags = [ "-Wno-conversion" ]

  if (is_clang) {
    cflags += [ "-Wno-shorten-64-to-32" ]
  }
}

static_library("editline") {
  public = [ "repo/include/editline.h" ]

  sources = [
    "repo/src/complete.c",
    "repo/src/editline.c",
    "repo/src/editline.h",
    "repo/src/sysunix.c",
    "repo/src/unix.h",
  ]

  public_configs = [ ":editline_config" ]

  configs += [ ":editline_config_disable_warnings" ]

  include_dirs = [ "include" ]
}
