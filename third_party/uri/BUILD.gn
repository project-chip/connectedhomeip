import("//build_overrides/chip.gni")

config("network_uri_config") {
  include_dirs = [
    "patches/include",
    "repo/uri/include",
  ]
}

config("network_uri_config_disable_warnings") {
  cflags = [
    "-Wno-shadow",
    "-Wno-extra",
    "-Wno-return-type",
  ]
  cflags_cc = [
    "-Wno-shadow",
    "-Wno-error=shadow",
  ]
}

source_set("network-uri") {
  sources = [
    "patches/src/uri.cpp",
    "repo/uri/src/detail/uri_advance_parts.cpp",
    "repo/uri/src/detail/uri_parse.cpp",
    "repo/uri/src/detail/uri_parse_authority.cpp",
    "repo/uri/src/uri_errors.cpp",
  ]

  include_dirs = [
    "patches",
    "repo/uri/src",
  ]

  cflags_cc = [
    "-include",
    rebase_path("patches/detail/uri_percent_encode.hpp", root_build_dir),
    "-Wno-shadow",
    "-Wno-error=shadow",
  ]

  public_configs = [ ":network_uri_config" ]
  configs += [ ":network_uri_config_disable_warnings" ]
}
