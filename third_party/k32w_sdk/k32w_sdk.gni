      "${k32w_sdk_root}/devices/K32W061/drivers/fsl_ctimer.c",
      "${k32w_sdk_root}/devices/K32W061/drivers/fsl_flash.c",
      "${k32w_sdk_root}/devices/K32W061/drivers/fsl_flexcomm.c",
