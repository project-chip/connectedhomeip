import("//build_overrides/telink.gni")

declare_args() {
  # Location of the Telink SDK.
  telink_sdk_root = "${chip_root}/third_party/telink/repo"
}

assert(telink_sdk_root != "", "telink_sdk_root must be specified")

# Defines an Telink SDK build target.
#
# Parameters:
#   telink_sdk_root - The location of the Telink SDK.
#   sources - The sources files to build.
template("telink_sdk") {

  sdk_target_name = target_name

  config("${sdk_target_name}_config") {

    include_dirs = [
      "./"
    ]

    libs = [

    ]

    defines = [

    ]

    cflags = [

    ]
  }

  source_set(sdk_target_name) {
    sources = [
      "hello.c"
    ]

    public_configs = [ ":${sdk_target_name}_config" ]
  }

}