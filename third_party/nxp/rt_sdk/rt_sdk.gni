      defines += [ "K32W061_TRANSCEIVER" ]
      defines += [ "BOARD_OTW_K32W0_PIN_INIT" ]

      #Framework OTW defines to locate transceiver binary header
      defines += [ "K32W0_RCP_BINARY_H_FILE=\"${k32w0_transceiver_bin_path}\"" ]

