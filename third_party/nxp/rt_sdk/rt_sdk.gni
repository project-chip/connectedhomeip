          [ "${rt_sdk_root}/middleware/wireless/framework/NVM/Interface" ]
    }

    libs = []

    defines = [
      "__STARTUP_CLEAR_BSS",
      "__STARTUP_INITIALIZE_NONCACHEDATA",
