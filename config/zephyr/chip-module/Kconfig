rsource "../Kconfig"

rsource "../../nxp/chip-module/Kconfig"

config CHIP_ZEPHYR_USE_POSIX_DEFAULT_SOURCE
    bool "Use _DEFAULT_SOURCE macro for POSIX API"
    depends on POSIX_API
    default y
    help
      Enables defining _DEFAULT_SOURCE macro when POSIX API is enabled
      on Zephyr platform.
